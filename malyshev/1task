
class ElementM:
    def __init__(self, name, symbol, number):
        self.name = name        
        self.symbol = symbol     
        self.number = number      


magnesium = ElementM("Магний", "Mg", 12)


print(f"Название: {magnesium.name}, Символ: {magnesium.symbol}, Атомный номер: {magnesium.number}")
